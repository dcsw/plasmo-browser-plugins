{
  "name": "webshot-grabber",
  "displayName": "WebShot Grabber",
  "version": "0.1.1",
  "description": "A simple screen shotter browser plugin.",
  "author": "dcsw",
  "scripts": {
    "start": "next start",
    "dev": "run-p dev:*",
    "dev:plasmo": "plasmo dev",
    "dev:next": "next dev --port 1947",
    "build": "run-s build:*",
    "build:plasmo": "plasmo build",
    "build:next": "next build",
    "package": "plasmo package",
    "disable-telemetry": "pnpm exec next telemetry disable"
  },
  "dependencies": {
    "@plasmohq/messaging": "0.6.2",
    "@types/html2canvas": "^1.0.0",
    "buffer": "^6.0.3",
    "docx": "^9.1.1",
    "html2canvas": "^1.4.1",
    "jimp": "^1.6.0",
    "next": "14.1.0",
    "plasmo": "0.89.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.4.0",
    "swiper": "^11.2.1"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@plasmohq/rps": "1.8.7",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "jimp": "^1.6.0",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "tabs",
      "sidePanel"
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*",
      "<all_urls>"
    ],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self'; img-src 'self' data:"
    },
    "action": {
      "default_title": "Open Side Panel"
    }
  }
}