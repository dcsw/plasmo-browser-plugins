// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
	"name": "Node.js & TypeScript",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	// "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-contrib/features/pnpm:2": {
			"version": "latest"
		},
		"ghcr.io/devcontainers-community/npm-features/prettier:1": {
			"version": "latest"
		}
	},

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"mhutchie.git-graph",
				"ms-azuretools.vscode-docker"
			]
		}
	},

	"mounts": [ "source=build,target=/plasmo/build,type=volume" ],
	"containerEnv": {
		"PLASMO_BUILD_PATH": "/plasmo/build"
	},
	"postCreateCommand": "git config --global --add safe.directory /workspaces/plasmo-browser-plugins && cd /workspaces/plasmo-browser-plugins && git ls-tree -r --name-only head | cpio -pdv /tmp/plasmo && cd /tmp/plasmo/webtext-grabber && pnpm install"
}
